<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.MainFragment">

        <LinearLayout
            android:id="@+id/networkStatusLayout"
            style="@style/StatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorStatusNotConnected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewNetworkStatus"
                style="@style/StatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/text_no_connectivity" />
        </LinearLayout>

        <ScrollView
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card"
                app:layout_constraintVertical_bias="0.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/card"
                    android:layout_width="271dp"
                    app:cardElevation="8dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/secondary_text"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary" />

                        <TextView
                            android:id="@+id/optional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/supporting_text"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:gravity="center"
                                android:id="@+id/more"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/supporting_text1"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginLeft="24dp"
                                android:id="@+id/help"
                                android:background="@drawable/btn_bg"
                                android:text="911"
                                android:gravity="center"
                                style="@style/report"
                                android:elevation="8dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/pick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="Pick attacker type"
                    android:textAppearance="@style/spouse_s_na"
                    android:textColor="?android:attr/textColorSecondary" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/pickabuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/spouseBtn"
                        android:text="Spouse"
                        app:cardElevation="8dp"
                        android:textAppearance="@style/spouse_s_na"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/abuserBtn"
                        app:cardElevation="8dp"
                        android:text="Attacker"
                        android:textAppearance="@style/spouse_s_na"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/spouse_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/spouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="@string/spouse"
                        android:textAppearance="@style/spouse_s_na"
                        android:textColor="?android:attr/textColorSecondary" />

                    <EditText
                        android:id="@+id/spouseinput"
                        android:layout_width="251dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/text_input_bg"
                        android:gravity="center"
                        android:hint="@string/enter_spouses_name" />

                </LinearLayout>

                <TextView
                    android:id="@+id/mess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="top"
                    android:text="@string/message"
                    android:textAppearance="@style/spouse_s_na"
                    android:textColor="?android:attr/textColorSecondary" />

                <EditText
                    android:id="@+id/message"
                    android:layout_width="251dp"
                    android:layout_height="86dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/edittext"
                    android:gravity="center"
                    android:hint="@string/enter_your_message"
                    android:inputType="textMultiLine" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/org"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="top"
                    android:text="@string/org"
                    android:textAppearance="@style/spouse_s_na"
                    android:textColor="?android:attr/textColorSecondary" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/org1"
                        app:cardElevation="8dp"
                        android:layout_width="74dp"
                        android:layout_height="53dp"
                        android:layout_margin="8dp">

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/org2"
                        app:cardElevation="8dp"
                        android:layout_width="74dp"
                        android:layout_height="53dp"
                        android:layout_margin="8dp">

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/org3"
                        app:cardElevation="8dp"
                        android:layout_width="74dp"
                        android:layout_height="53dp"
                        android:layout_margin="8dp">

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/unistall"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/report"
                    android:gravity="center"
                    style="@style/report"
                    android:elevation="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
